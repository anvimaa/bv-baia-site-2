---
// Importing necessary components
import MainLayout from "../../layouts/MainLayout.astro";
import PrimaryCTA from "../../components/ui/buttons/PrimaryCTA.astro";
import CardSmall from "../../components/ui/cards/CardSmall.astro";
import CardWide from "../../components/ui/cards/CardWide.astro";
import FeaturesStatsAlt from "../../components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "../../components/sections/testimonials/TestimonialsSectionAlt.astro";
import { config } from "../../utils/config";
import avatar1 from "../../images/avatar.png";
import avatar2 from "../../images/avatar2.png";
import avatar3 from "../../images/avatar3.png";

// Importing necessary functions from Astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<"products">[] = (
  await getCollection("products")
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id
);

// Define variables for page content
const title: string = "Productos";
const subTitle: string = `Na RESORT ${config.brand}, orgulhamo-nos de oferecer uma ampla gama de produtos ópticos de alta qualidade, cuidadosamente selecionados para atender às necessidades e preferências individuais de nossos clientes. Nossos produtos são projetados para fornecer conforto, estilo e desempenho excepcionais, garantindo uma experiência visual incomparável. Abaixo estão alguns dos produtos que oferecemos`;

// Testimonial data that will be rendered in the component
const testimonials = [
  // First testimonial data
  {
    content: `"Depois de anos lutando com problemas de visão e tentando encontrar os óculos certos, finalmente encontrei a RESORT ${config.brand}. Desde o primeiro exame até a escolha dos óculos, fiquei impressionada com a atenção e o cuidado da equipe. Agora, com meus novos óculos, vejo o mundo de uma maneira totalmente nova. Recomendo a RESORT ${config.brand} a todos que valorizam qualidade e serviço excepcionais."`,
    author: "Jason Clark",
    role: "Site Foreman | TopBuild",
    avatarSrc: avatar1,
    avatarAlt: "Image Description",
  },
  // Second testimonial data
  {
    content: `"Como alguém que depende de lentes de contato para corrigir minha visão, sempre fui cético em relação a experimentar novas marcas. No entanto, depois de visitar a RESORT ${config.brand} e receber uma consulta personalizada, decidi experimentar suas lentes recomendadas. Fiquei surpreso com o conforto e a nitidez que experimentei desde o primeiro momento. Agora, não consigo imaginar minha vida sem elas. Obrigado, RESORT ${config.brand}, por me proporcionar uma visão tão clara e confortável."`,
    author: "Maria Gonzalez",
    role: "Interior Designer | Creative Spaces",
    avatarSrc: avatar2,
    avatarAlt: "Image Description",
  },
  // Third testimonial data
  {
    content: `"Como alguém com uma prescrição complexa, sempre tive dificuldade em encontrar óculos que se ajustassem corretamente e proporcionassem uma visão nítida. Mas minha experiência na RESORT ${config.brand} foi excepcional. A equipe não apenas me ajudou a escolher a armação perfeita, mas também garantiram que minhas lentes fossem precisamente adaptadas às minhas necessidades. Agora, finalmente posso ver com clareza e estilo. Estou extremamente grata por sua expertise e cuidado."`,
    author: "Richard Kim",
    role: "Master Carpenter | WoodWright",
    avatarSrc: avatar3,
    avatarAlt: "Image Description",
  },
];
---

<MainLayout title="Productos">
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex items-center justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="flex items-center gap-12">
        <h1
          class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
        >
          {title}
        </h1>
        {
          subTitle && (
            <p class="hidden max-w-screen-sm text-pretty text-neutral-600 dark:text-neutral-400 md:block">
              {subTitle}
            </p>
          )
        }
      </div>
      <PrimaryCTA
        title="Clientes satisfeitos"
        url="#testimonials"
        noArrow={false}
      />
    </div>
    <!--Displaying products in alternating styles. Alternative product gets different card styling.-->
    <!--Maps through all product entries and displays them with either CardSmall or CardWide based on their position.-->
    <section class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {
        product.map((product, index) => {
          const position = index % 4;
          if (position === 0 || position === 3) {
            return <CardSmall product={product} />;
          } else {
            return <CardWide product={product} />;
          }
        })
      }
    </section>
  </div>
  <!--Features statistics section-->

  <!--Testimonials section-->
  <TestimonialsSectionAlt
    title="O que os nossos clientes dizem?"
    testimonials={testimonials}
  />
</MainLayout>
