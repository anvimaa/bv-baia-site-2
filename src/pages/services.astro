---
// Import necessary components
import MainLayout from "../layouts/MainLayout.astro";
import MainSection from "../components/ui/blocks/MainSection.astro";
import LeftSection from "../components/ui/blocks/LeftSection.astro";
import RightSection from "../components/ui/blocks/RightSection.astro";
import FeaturesStats from "../components/sections/features/FeaturesStats.astro";
import { config } from "../utils/config";

// Import necessary images
import glass1 from "../images/image-3.avif";
import glass2 from "../images/image-4.avif";
import glass3 from "../images/image-7.avif";

import acessor1 from "../images/image-7.avif";
import acessor2 from "../images/image-3.avif";
import acessor3 from "../images/image-4.avif";
import acessor4 from "../images/image-5.avif";
import acessor5 from "../images/image-7.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Eventos e Celebrações",
    subTitle: `Organize eventos inesquecíveis no Resort Kifulo Kieto. Oferecemos espaços elegantes e serviços personalizados para casamentos, conferências e outras celebrações especiais, garantindo que cada detalhe seja perfeito.`,
    single: false,
    imgOne: glass1,
    imgOneAlt: "glass1",
    imgTwo: glass2,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Atividades Recreativas",
    subTitle: `Aproveite uma ampla gama de atividades recreativas, incluindo trilhas, esportes aquáticos, yoga e passeios guiados pela natureza. Temos opções para todas as idades e interesses.`,
    img: glass3,
    imgAlt: "glass3",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Gastronomia Excepcional",
    subTitle: `Saboreie pratos deliciosos preparados por chefs renomados em nossos restaurantes exclusivos. Utilizamos ingredientes frescos e de alta qualidade para oferecer uma experiência culinária única.`,
    single: false,
    imgOne: acessor1,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: acessor2,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Spa e Bem-Estar",
    subTitle: `Relaxe e rejuvenesça no nosso spa de classe mundial. Oferecemos uma variedade de tratamentos, desde massagens terapêuticas até terapias holísticas, tudo para proporcionar o máximo de bem-estar`,
    img: acessor3,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Acomodações de Luxo",
    subTitle: `Desfrute de conforto e elegância em nossas suítes e vilas privativas. Cada acomodação é cuidadosamente decorada e equipada com todas as comodidades modernas, garantindo uma estadia inesquecível.`,
    single: false,
    imgOne: acessor4,
    imgOneAlt: "In progress building structure",
    imgTwo: acessor5,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: false,
    btnTitle: "Read more",
    btnURL: "#",
  },
];
---

<MainLayout title="Serviços">
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Explore os nossos serviços"
    subTitle=`Na RESORT ${config.brand}, nossa prioridade é garantir sua satisfação e cuidar da tua estadia e relaxamento. Entre em contato conosco para marcar uma reserva ou saber mais sobre nossos serviços. Estamos aqui para ajudá-lo a ter momentos de lazer único`
    btnExists={true}
    btnTitle="Fazer uma marcação"
    btnURL="/contact"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Alguns Números"
    subTitle="Abaixo temos alguns números que demonstram o nosso trabalho ao longo da nossa jornada"
    mainStatTitle="+1,000"
    mainStatSubTitle="clientes fatisfeitos com os nossos serviços"
    stats={[
      {
        stat: "95.8%",
        description:
          "de safisfação nos serviços prestados para os nossos clientes",
      },
      {
        stat: "+5,000",
        description: "seguidores nas nossas redes sociais",
      },
      {
        stat: "+1,000",
        description: "armações encomendadas com sucesso",
      },
    ]}
  />
</MainLayout>
