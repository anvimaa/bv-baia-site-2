---
// Import the necessary components
import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "../components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "../components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "../components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "../components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "../components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "../components/sections/FAQ.astro";
import AnnouncementBanner from "../components/ui/banners/AnnouncementBanner.astro";
import heroImage from "../images/services/montagem1.jpg";
import avatar1 from "../images/avatar.png";
import avatar2 from "../images/avatar2.png";
import avatar3 from "../images/avatar3.png";
import avatar4 from "../images/avatar4.png";
import { config } from "../utils/config";

const avatarSrcs: Array<ImageMetadata> = [avatar1, avatar2, avatar3, avatar4];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Anvima Code"
    url="https://anvima.vercel.app"
  />

  <HeroSection
    title=`Resort Kifulo Kieto: Onde o Luxo Encontra a Natureza`
    subTitle="Bem-vindo ao Resort Kifulo Kieto, um paraíso de tranquilidade e luxo no coração da natureza. Oferecemos uma experiência única, combinando acomodações de classe mundial com a beleza intocada da nossa região. Desfrute de um refúgio perfeito, onde cada detalhe é pensado para proporcionar o máximo conforto e satisfação."
    primaryBtn="Nossos Serviços"
    primaryBtnURL="/services"
    secondaryBtn="Saber Mais"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Mais de <span class="font-bold">1k</span> Clientes satisfeitos`
    src={heroImage}
    alt="resort kifulo kieto"
  />

  <ClientsSection
    title="Nossas Marcas"
    subTitle="Nossos produtos são formecidos por marcas líderes do mercado para proporcionar a melhor experiência para os nossos clientes."
  />

  <!-- <FeaturesGeneral /> -->

  <FeaturesNavs />

  <TestimonialsSection
    title="Depoimentos"
    subTitle=`Nossos clientes adoram o RESORT ${config.brand}! Aqui estão alguns depoimentos:`
    ;
    testimonials={[
      {
        content:
          "Estadia incrível! Atendimento impecável e instalações de primeira.",
        author: "Joh Doe",
        role: "Cliente | Uíge.",
        avatarSrc: avatar1,
      },
      {
        content:
          "Comida deliciosa e vistas deslumbrantes. Um verdadeiro paraíso!",
        author: "Lary Phink",
        role: "Cliente | Uíge.",
        avatarSrc: avatar2,
      },
      {
        content:
          "Nosso casamento foi perfeito graças à equipe do resort. Inesquecível!",
        author: "Gomes Paca",
        role: "Cliente | Uíge.",
        avatarSrc: avatar3,
      },
    ]}
    statistics={[
      {
        count: "+1k",
        description: "clientes safisteitos com os nossos serviços e produtos",
      },
      {
        count: "+3k",
        description: "seguidores nas redes sociais",
      },
      {
        count: "10%",
        description: "desconto no seu primeiro produto ou consulta",
      },
      {
        count: "2x",
        description: "entragas rápidas e atendimento",
      },
    ]}
  />

  <FAQ />

  <HeroSectionAlt
    title="O melhor para o seu conforto"
    subTitle="Proporcionammos os melhores momentos para você e a sua família. Experimente os nossos produtos e venha descobrir o que é melhor para o seu estilo de vida."
    url="/products"
  />
</MainLayout>
